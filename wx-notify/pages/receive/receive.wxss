page {
  background-color: #f2eeee;
}

.nodata-view {
  width: 100%;
  color: grey;
  text-align: center;
  font-size: 27rpx;
  line-height: 850rpx;
}

.nodata-view image {
  height: 450rpx;
  width: 300rpx;
  position: absolute;
  bottom: 160rpx;
  right: 80rpx;
}

.notify-view {
  display: flex;
  flex-direction: column;
  width: 730rpx;
  margin-left: 10rpx;
  font-size: 25rpx;
  color: grey;
  padding: 10rpx 0;
  background-color: white;
  margin-top: 20rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #c3c2ba;
}

.notify-view image {
  width: 40rpx;
  height: 40rpx;
}

.time-text {
  position: absolute;
  right: 20rpx;
}

.title-text {
  font-size: 40rpx;
  color: black;
  font-weight: bold;
  margin-left: 10rpx;
  margin-top: 20rpx;
}

.content-text {
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
}

.status-view {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.status-view image {
  margin-left: 20rpx;
}

.avatar-img {
  border-radius: 20rpx;
}

.delete-box {
  position: absolute;
  right: 20rpx;
  width: 90rpx;
}

.create-btn {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: grey;
  width: 100%;
  text-align: center;
  height: 80rpx;
}
